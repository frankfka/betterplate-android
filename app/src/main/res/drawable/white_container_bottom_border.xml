<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- draw a 4 dp width border around the rectangle shape -->
            <stroke android:color="@color/colorPrimaryDark" android:width="1sp"/>
        </shape>
    </item>
    <!--
        hide left, top and right side border using white color
        by padding 1 sp bottom side
    -->
    <item android:bottom="1sp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
</layer-list>